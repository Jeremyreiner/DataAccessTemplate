server {
	listen 443 ssl;
	ssl on;
	ssl_certificate      /home/ubuntu/SSL-Certificate/certificatemerge.crt;
	ssl_certificate_key  /home/ubuntu/SSL-Certificate/private.key;

	server_name   publifysolutions.com;
	client_max_body_size 100M;
	root /var/www/html/InfluxDbUI/;

	location /api/ {
		proxy_pass https://localhost:5001/;
		proxy_redirect		off;
		proxy_set_header	Host $host;
		client_max_body_size 100M;

	}

	location / {
		client_max_body_size 100M;
		try_files $uri /index.html;
	}

}


# Elastic Beanstalk conf is the right one not default
